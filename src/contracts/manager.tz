parameter
  (or
     (lambda %do unit (list operation))
     (unit %default));
storage key_hash;
code
  { UNPAIR ;
    IF_LEFT
      { DUUP ;
        IMPLICIT_ACCOUNT ; ADDRESS ;
        SENDER ;
        IFCMPNEQ
          { SENDER ; PUSH string "Only the owner can operate." ; PAIR ; FAILWITH }
          { UNIT ; EXEC ; PAIR }}
      { DROP ; NIL operation ; PAIR }};
